<h1>Sign up</h1>
<%= form_for @user do |f| %>
	<% if @user.errors.size > 0 %>
		<div class="alert alert-danger" role="alert">
			<%= @user.errors.full_messages.to_sentence %>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-group" %>
	</div>
	<div class="form-group">
		<%= f.label :email %>
		<%= f.text_field :email, class: "form-group" %>
	</div>
	<div class="form-group">
		<%= f.label :password %>
		<%= f.password_field :password, class: "form-group" %>
	</div>
	<%= f.submit %>
<% end %>